{
  "compilerOptions": {
    "baseUrl": ".",
    "isolatedModules": true,
    "paths": {
      "@lib/*": [
        "lib/*"
      ],
      "@pages/*": [
        "pages/*"
      ]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "types": [
      "cypress",
      "node",
      "jest"
    ],
    "lib": [
      "dom",
      "es2017"
    ],
    "moduleResolution": "node",
    "allowJs": true,
    "noEmit": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "**/*.config.ts",
    "**/*.setup.ts"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src",
    "./cypress.d.ts"
  ]
}
